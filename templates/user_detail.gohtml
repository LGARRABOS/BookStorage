{{ define "user_detail" }}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Profil de {{ .TargetUser.Username }}</title>
    <link rel="stylesheet" href="/static/css/base.css">
    <link rel="stylesheet" href="/static/css/users.css">
    <script>
        (function() {
            const theme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', theme);
        })();
    </script>
</head>
<body>
    <header class="topbar">
        <div class="container nav-layout">
            <a class="brand" href="/dashboard">üìö BookStorage</a>
            <nav class="nav-links">
                <a href="/dashboard">Tableau de bord</a>
                <a href="/stats">Statistiques</a>
                <a href="/users">Lecteurs</a>
                <button class="theme-toggle" onclick="toggleTheme()" title="Changer le th√®me" type="button">
                    <span id="theme-icon">üåô</span>
                </button>
                <a href="/profile" class="btn btn-nav">Mon profil</a>
                <a href="/logout" class="btn btn-logout">D√©connexion</a>
            </nav>
        </div>
    </header>
    <main class="page-body">
        <div class="container content-card">
            <section class="page-section">
                <header class="section-header">
                    <h1>Profil de {{ .TargetUser.Username }}</h1>
                    {{ if .TargetUser.DisplayName.Valid }}<p>Nom affich√© : {{ .TargetUser.DisplayName.String }}</p>{{ end }}
                    {{ if .TargetUser.Bio.Valid }}<p>{{ .TargetUser.Bio.String }}</p>{{ end }}
                </header>
                {{ if .Works }}
                <h2>Biblioth√®que partag√©e</h2>
                <div class="table-wrapper">
                    <table class="data-table">
                        <thead>
                            <tr>
                                <th>Titre</th>
                                <th>Chapitre</th>
                                <th>Note</th>
                                <th>Statut</th>
                                <th>Type</th>
                                {{ if .CanImport }}<th>Importer</th>{{ end }}
                            </tr>
                        </thead>
                        <tbody>
                        {{ range .Works }}
                            <tr>
                                <td>{{ .Title }}</td>
                                <td>{{ .Chapter }}</td>
                                <td>
                                    {{ if .Rating }}
                                    <span class="star-rating">
                                        {{ $rating := .Rating }}
                                        {{ range $i := seq 5 }}{{ if le $i $rating }}<span class="star filled">‚òÖ</span>{{ else }}<span class="star">‚òÖ</span>{{ end }}{{ end }}
                                    </span>
                                    {{ else }}‚Äî{{ end }}
                                </td>
                                <td>{{ if .Status.Valid }}{{ .Status.String }}{{ else }}‚Äî{{ end }}</td>
                                <td>{{ if .ReadingType.Valid }}{{ .ReadingType.String }}{{ else }}Autre{{ end }}</td>
                                {{ if $.CanImport }}
                                <td>
                                    <form method="POST" action="/users/{{ $.TargetUser.ID }}/import/{{ .ID }}">
                                        <button type="submit" class="btn btn-primary btn-icon">Importer</button>
                                    </form>
                                </td>
                                {{ end }}
                            </tr>
                        {{ end }}
                        </tbody>
                    </table>
                </div>
                {{ else }}
                <p>Ce lecteur n'a pas encore partag√© d'≈ìuvres.</p>
                {{ end }}
            </section>
        </div>
    </main>
    <footer class="page-footer">
        <div class="container"><p>BookStorage</p></div>
    </footer>
    <script>
        function toggleTheme() {
            const html = document.documentElement;
            const current = html.getAttribute('data-theme') || 'light';
            const next = current === 'light' ? 'dark' : 'light';
            html.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
            updateThemeIcon();
        }
        
        function updateThemeIcon() {
            const theme = document.documentElement.getAttribute('data-theme') || 'light';
            const icon = document.getElementById('theme-icon');
            if (icon) icon.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
        }
        
        document.addEventListener('DOMContentLoaded', updateThemeIcon);
    </script>
</body>
</html>
{{ end }}
