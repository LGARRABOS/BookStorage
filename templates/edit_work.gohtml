{{ define "edit_work" }}
<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Modifier ¬´ {{ .Work.Title }} ¬ª - BookStorage</title>
    <link rel="stylesheet" href="/static/css/base.css">
    <script>
        (function() {
            const theme = localStorage.getItem('theme') || 'light';
            document.documentElement.setAttribute('data-theme', theme);
        })();
    </script>
    <style>
        .form-page {
            max-width: 900px;
            margin: 0 auto;
        }
        
        .form-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
            flex-wrap: wrap;
            gap: 1rem;
        }
        
        .form-header-title h1 {
            font-size: 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            margin-bottom: 0.25rem;
        }
        
        .form-header-title p {
            color: var(--text-muted);
            margin: 0;
        }
        
        .form-card {
            background: var(--surface);
            border-radius: 1.25rem;
            padding: 1.75rem;
            border: 1px solid var(--border-subtle);
            margin-bottom: 1.5rem;
        }
        
        .form-card-header {
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 1.5rem;
            padding-bottom: 1rem;
            border-bottom: 1px solid var(--border-subtle);
        }
        
        .form-card-header .icon {
            width: 40px;
            height: 40px;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 1.25rem;
            flex-shrink: 0;
        }
        
        .form-card-header .icon.blue { background: rgba(56, 189, 248, 0.15); }
        .form-card-header .icon.purple { background: rgba(129, 140, 248, 0.15); }
        .form-card-header .icon.orange { background: rgba(251, 146, 60, 0.15); }
        .form-card-header .icon.green { background: rgba(34, 197, 94, 0.15); }
        
        .form-card-header h2 {
            font-size: 1.1rem;
            font-weight: 600;
            color: var(--text-primary);
            margin: 0;
        }
        
        .form-card-header span {
            font-size: 0.85rem;
            color: var(--text-muted);
        }
        
        .form-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 1.25rem;
        }
        
        .form-group {
            margin-bottom: 1.25rem;
        }
        
        .form-group:last-child {
            margin-bottom: 0;
        }
        
        .form-group.full-width {
            grid-column: 1 / -1;
        }
        
        .form-group label {
            display: block;
            font-weight: 500;
            color: var(--text-secondary);
            margin-bottom: 0.5rem;
            font-size: 0.9rem;
        }
        
        .form-group label .required {
            color: #ef4444;
        }
        
        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid var(--border-subtle);
            border-radius: 0.75rem;
            font-size: 1rem;
            background: var(--background);
            color: var(--text-primary);
            transition: border-color 0.2s ease, box-shadow 0.2s ease;
        }
        
        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--primary);
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
        }
        
        .form-group textarea {
            resize: vertical;
            min-height: 100px;
        }
        
        .form-group input[type="file"] {
            padding: 0.6rem;
        }
        
        .form-hint {
            font-size: 0.8rem;
            color: var(--text-muted);
            margin-top: 0.35rem;
        }
        
        /* Star Rating */
        .star-rating-picker {
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }
        
        .star-rating-picker .stars {
            display: flex;
            gap: 0.25rem;
        }
        
        .star-rating-picker .star {
            font-size: 1.75rem;
            color: #d1d5db;
            cursor: pointer;
            transition: color 0.15s ease, transform 0.15s ease;
            user-select: none;
        }
        
        .star-rating-picker .star:hover {
            transform: scale(1.15);
        }
        
        .star-rating-picker .star.active {
            color: #fbbf24;
        }
        
        .star-rating-picker .clear-btn {
            padding: 0.4rem 0.75rem;
            border: 1px solid var(--border-subtle);
            border-radius: 0.5rem;
            background: var(--background);
            color: var(--text-muted);
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .star-rating-picker .clear-btn:hover {
            background: rgba(239, 68, 68, 0.1);
            border-color: rgba(239, 68, 68, 0.3);
            color: #ef4444;
        }
        
        /* Image Upload */
        .image-section {
            display: grid;
            grid-template-columns: auto 1fr;
            gap: 1.5rem;
            align-items: start;
        }
        
        .current-image {
            text-align: center;
        }
        
        .current-image img {
            width: 120px;
            height: 160px;
            object-fit: cover;
            border-radius: 0.75rem;
            box-shadow: var(--shadow-base);
        }
        
        .current-image .no-image {
            width: 120px;
            height: 160px;
            border-radius: 0.75rem;
            background: linear-gradient(135deg, var(--primary-muted), rgba(251, 146, 60, 0.1));
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2.5rem;
            opacity: 0.5;
        }
        
        .current-image p {
            font-size: 0.8rem;
            color: var(--text-muted);
            margin-top: 0.5rem;
        }
        
        .image-upload-area {
            border: 2px dashed var(--border-subtle);
            border-radius: 1rem;
            padding: 2rem;
            text-align: center;
            transition: all 0.2s ease;
            cursor: pointer;
        }
        
        .image-upload-area:hover {
            border-color: var(--primary);
            background: var(--primary-muted);
        }
        
        .image-upload-area .upload-icon {
            font-size: 2rem;
            margin-bottom: 0.5rem;
            opacity: 0.5;
        }
        
        .image-upload-area p {
            color: var(--text-muted);
            margin: 0;
            font-size: 0.9rem;
        }
        
        .image-upload-area input[type="file"] {
            display: none;
        }
        
        .image-preview {
            margin-top: 1rem;
            display: none;
        }
        
        .image-preview img {
            max-width: 100px;
            max-height: 140px;
            border-radius: 0.5rem;
            object-fit: cover;
        }
        
        /* Form Actions */
        .form-actions {
            display: flex;
            justify-content: space-between;
            align-items: center;
            gap: 1rem;
            margin-top: 0.5rem;
        }
        
        .form-actions-left {
            display: flex;
            gap: 0.75rem;
        }
        
        .form-actions-right {
            display: flex;
            gap: 0.75rem;
        }
        
        .btn-danger {
            background: rgba(239, 68, 68, 0.1);
            color: #dc2626;
            border: 1px solid rgba(239, 68, 68, 0.2);
        }
        
        .btn-danger:hover {
            background: rgba(239, 68, 68, 0.2);
        }
        
        /* Dark mode */
        [data-theme="dark"] .form-card {
            background: rgba(51, 65, 85, 0.6);
            border-color: rgba(100, 116, 139, 0.3);
        }
        
        [data-theme="dark"] .form-card-header {
            border-color: rgba(100, 116, 139, 0.3);
        }
        
        [data-theme="dark"] .form-group input,
        [data-theme="dark"] .form-group select,
        [data-theme="dark"] .form-group textarea {
            background: rgba(15, 23, 42, 0.5);
            border-color: rgba(100, 116, 139, 0.4);
            color: #e2e8f0;
        }
        
        [data-theme="dark"] .form-group input::placeholder,
        [data-theme="dark"] .form-group textarea::placeholder {
            color: #94a3b8;
        }
        
        [data-theme="dark"] .star-rating-picker .star {
            color: #475569;
        }
        
        [data-theme="dark"] .star-rating-picker .star.active {
            color: #fbbf24;
        }
        
        [data-theme="dark"] .star-rating-picker .clear-btn {
            background: rgba(15, 23, 42, 0.5);
            border-color: rgba(100, 116, 139, 0.4);
        }
        
        [data-theme="dark"] .image-upload-area {
            border-color: rgba(100, 116, 139, 0.4);
        }
        
        [data-theme="dark"] .image-upload-area:hover {
            border-color: var(--primary);
            background: rgba(79, 70, 229, 0.1);
        }
        
        [data-theme="dark"] .btn-danger {
            background: rgba(239, 68, 68, 0.15);
            color: #fca5a5;
            border-color: rgba(239, 68, 68, 0.3);
        }
        
        [data-theme="dark"] .btn-danger:hover {
            background: rgba(239, 68, 68, 0.25);
        }
        
        /* Responsive */
        @media (max-width: 600px) {
            .form-header {
                flex-direction: column;
                align-items: stretch;
            }
            
            .form-row {
                grid-template-columns: 1fr;
            }
            
            .image-section {
                grid-template-columns: 1fr;
            }
            
            .current-image {
                justify-self: center;
            }
            
            .form-actions {
                flex-direction: column;
            }
            
            .form-actions-left,
            .form-actions-right {
                width: 100%;
            }
            
            .form-actions-left .btn,
            .form-actions-right .btn {
                flex: 1;
            }
        }
    </style>
</head>
<body>
    <header class="topbar">
        <div class="container nav-layout">
            <a class="brand" href="/dashboard">üìö BookStorage</a>
            <nav class="nav-links">
                <a href="/dashboard">Tableau de bord</a>
                <a href="/stats">Statistiques</a>
                <a href="/users">Lecteurs</a>
                <button class="theme-toggle" onclick="toggleTheme()" title="Changer le th√®me" type="button">
                    <span id="theme-icon">üåô</span>
                </button>
                <a href="/profile" class="btn btn-nav">Mon profil</a>
                <a href="/logout" class="btn btn-logout">D√©connexion</a>
            </nav>
        </div>
    </header>

    <main class="page-body">
        <div class="container form-page">
            <div class="form-header">
                <div class="form-header-title">
                    <h1>‚úèÔ∏è Modifier l'≈ìuvre</h1>
                    <p>{{ .Work.Title }}</p>
                </div>
                <a href="/dashboard" class="btn btn-secondary">‚Üê Retour</a>
            </div>

            <form method="POST" enctype="multipart/form-data">
                <!-- Informations principales -->
                <div class="form-card">
                    <div class="form-card-header">
                        <div class="icon blue">üìñ</div>
                        <div>
                            <h2>Informations principales</h2>
                            <span>Titre, progression et classification</span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="title">Titre <span class="required">*</span></label>
                        <input id="title" type="text" name="title" value="{{ .Work.Title }}" required>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label for="chapter">Chapitre actuel</label>
                            <input id="chapter" type="number" name="chapter" min="0" value="{{ .Work.Chapter }}">
                        </div>
                        <div class="form-group">
                            <label for="status">Statut</label>
                            <select id="status" name="status">
                                {{ $currentStatus := "" }}
                                {{ if .Work.Status.Valid }}{{ $currentStatus = .Work.Status.String }}{{ end }}
                                {{ range .Statuses }}
                                <option value="{{ . }}" {{ if eq . $currentStatus }}selected{{ end }}>{{ . }}</option>
                                {{ end }}
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="reading_type">Type</label>
                            <select id="reading_type" name="reading_type">
                                {{ $currentType := "Roman" }}
                                {{ if .Work.ReadingType.Valid }}{{ $currentType = .Work.ReadingType.String }}{{ end }}
                                {{ range .ReadingTypes }}
                                <option value="{{ . }}" {{ if eq . $currentType }}selected{{ end }}>{{ . }}</option>
                                {{ end }}
                            </select>
                        </div>
                    </div>
                </div>

                <!-- Lien et Image -->
                <div class="form-card">
                    <div class="form-card-header">
                        <div class="icon purple">üîó</div>
                        <div>
                            <h2>M√©dia</h2>
                            <span>Lien de lecture et couverture</span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="link">Lien de lecture</label>
                        <input id="link" type="url" name="link" placeholder="https://..." value="{{ if .Work.Link.Valid }}{{ .Work.Link.String }}{{ end }}">
                    </div>
                    
                    <div class="form-group">
                        <label>Image de couverture</label>
                        <div class="image-section">
                            <div class="current-image">
                                {{ if .Work.ImagePath.Valid }}
                                    {{ $imgUrl := work_image_url .Work.ImagePath.String }}
                                    {{ if $imgUrl }}
                                        <img src="{{ $imgUrl }}" alt="Couverture actuelle">
                                        <p>Image actuelle</p>
                                    {{ else }}
                                        <div class="no-image">üìñ</div>
                                        <p>Pas d'image</p>
                                    {{ end }}
                                {{ else }}
                                    <div class="no-image">üìñ</div>
                                    <p>Pas d'image</p>
                                {{ end }}
                            </div>
                            <div>
                                <div class="image-upload-area" onclick="document.getElementById('image').click()">
                                    <div class="upload-icon">üì§</div>
                                    <p>Cliquez pour changer l'image</p>
                                    <p class="form-hint">Laissez vide pour conserver l'image actuelle</p>
                                    <input id="image" type="file" name="image" accept="image/*" onchange="previewImage(this)">
                                </div>
                                <div class="image-preview" id="image-preview">
                                    <img src="" alt="Nouvelle image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Appr√©ciation -->
                <div class="form-card">
                    <div class="form-card-header">
                        <div class="icon orange">‚≠ê</div>
                        <div>
                            <h2>Appr√©ciation</h2>
                            <span>Note et commentaires personnels</span>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label>Votre note</label>
                        {{ $rating := .Work.Rating }}
                        <div class="star-rating-picker" id="star-picker">
                            <input type="hidden" name="rating" id="rating-value" value="{{ $rating }}">
                            <div class="stars">
                                <span class="star {{ if ge $rating 1 }}active{{ end }}" data-value="1">‚òÖ</span>
                                <span class="star {{ if ge $rating 2 }}active{{ end }}" data-value="2">‚òÖ</span>
                                <span class="star {{ if ge $rating 3 }}active{{ end }}" data-value="3">‚òÖ</span>
                                <span class="star {{ if ge $rating 4 }}active{{ end }}" data-value="4">‚òÖ</span>
                                <span class="star {{ if ge $rating 5 }}active{{ end }}" data-value="5">‚òÖ</span>
                            </div>
                            <button type="button" class="clear-btn" onclick="clearRating()">Effacer</button>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label for="notes">Notes personnelles</label>
                        <textarea id="notes" name="notes" placeholder="Vos impressions, o√π vous en √™tes dans l'histoire, ce que vous en pensez...">{{ if .Work.Notes.Valid }}{{ .Work.Notes.String }}{{ end }}</textarea>
                    </div>
                </div>

                <!-- Actions -->
                <div class="form-actions">
                    <div class="form-actions-left">
                        <a href="/delete/{{ .Work.ID }}" class="btn btn-danger" onclick="return confirm('√ätes-vous s√ªr de vouloir supprimer ¬´ {{ .Work.Title }} ¬ª ?');">üóëÔ∏è Supprimer</a>
                    </div>
                    <div class="form-actions-right">
                        <a href="/dashboard" class="btn btn-secondary">Annuler</a>
                        <button type="submit" class="btn btn-primary">‚úì Enregistrer</button>
                    </div>
                </div>
            </form>
        </div>
    </main>

    <footer class="page-footer">
        <div class="container"><p>BookStorage</p></div>
    </footer>

    <script>
        function toggleTheme() {
            const html = document.documentElement;
            const current = html.getAttribute('data-theme') || 'light';
            const next = current === 'light' ? 'dark' : 'light';
            html.setAttribute('data-theme', next);
            localStorage.setItem('theme', next);
            updateThemeIcon();
        }
        
        function updateThemeIcon() {
            const theme = document.documentElement.getAttribute('data-theme') || 'light';
            const icon = document.getElementById('theme-icon');
            if (icon) icon.textContent = theme === 'dark' ? '‚òÄÔ∏è' : 'üåô';
        }

        function previewImage(input) {
            const preview = document.getElementById('image-preview');
            const img = preview.querySelector('img');
            
            if (input.files && input.files[0]) {
                const reader = new FileReader();
                reader.onload = function(e) {
                    img.src = e.target.result;
                    preview.style.display = 'block';
                };
                reader.readAsDataURL(input.files[0]);
            }
        }

        function clearRating() {
            document.getElementById('rating-value').value = '0';
            document.querySelectorAll('#star-picker .star').forEach(s => s.classList.remove('active'));
        }

        document.addEventListener('DOMContentLoaded', function() {
            updateThemeIcon();
            
            // Star picker
            const picker = document.getElementById('star-picker');
            const input = document.getElementById('rating-value');
            const stars = picker.querySelectorAll('.star');
            
            function updateStars(rating) {
                stars.forEach((star, index) => {
                    star.classList.toggle('active', index < rating);
                });
            }
            
            stars.forEach(star => {
                star.addEventListener('click', function() {
                    const value = parseInt(this.dataset.value);
                    input.value = value;
                    updateStars(value);
                });
                
                star.addEventListener('mouseenter', function() {
                    const value = parseInt(this.dataset.value);
                    updateStars(value);
                });
            });
            
            picker.addEventListener('mouseleave', function() {
                updateStars(parseInt(input.value) || 0);
            });
        });
    </script>
</body>
</html>
{{ end }}
